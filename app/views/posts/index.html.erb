<html>

<p id="notice"><%= notice %></p>

<h1><center>Posts</center></h1>
<style>
  body{
    background-color: #D6F696;
  }
</style>

<table bgcolor="#DFA5F2" border="2" cellpadding="10" align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Created_by</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.email%></td>
        <td><%= Comment.find_by(post_id: post.id).try(:body)%></td>
        <td><%= link_to '<button type="button">Show</button>'.html_safe, post %></td>
        <td><%= link_to '<button type="button">Edit</button>'.html_safe, edit_post_path(post) %></td>
        <td><%= link_to '<button type="button">Destroy</button>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New Post", new_post_path, id: "new_link", remote: true%>

</html>
